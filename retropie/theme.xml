<theme>
    <formatVersion>3</formatVersion>
    <include>./../common.xml</include>
	<include>./../common/templates/landscape.xml</include>

	<view name="system">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logo.svg</path>
        </image>
		
		<image name="overlay" extra="true">
			<path>./controller.svg</path>
		</image>
	</view>

	<view name="basic, detailed">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logo.svg</path>
		</image>
		
		<image name="overlay" extra="true">
			<path>./controller.svg</path>
		</image>		
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<size>0.685 0.7745</size>
		</image>
		
		<textlist name="gamelist">
			<size>0.685 0.71</size>
			<fontSize>0.037</fontSize>
			<lineSpacing>1.56</lineSpacing>
			<forceUppercase>0</forceUppercase>
		</textlist>
	</view>
</theme>